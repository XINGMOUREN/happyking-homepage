---
import { footer } from "src/config";
---


<footer id="footer">
    {footer.beian.enabled ? (<span><a href="https://beian.miit.gov.cn/" target="_blank">{footer.beian.value}</a></span>) : ''}
</footer>
<footer id="footer">
    {
        footer.live.enabled ? (
            <span><span>本站由Spring(迎春)强力驱动-已运行</span><span id="footer-live"></span></span>
        ): null
    }
</footer>
<footer id="footer">
    <span>"桃李春迎一杯酒,江湖夜雨十年灯."</span>
</footer>

<script>
import { footer } from "src/config";

document.addEventListener('astro:page-load', () => {
    let liveDom = document.getElementById('footer-live');
    if(liveDom){
        setInterval(updateLiveTime, 100);
    }
    function updateLiveTime(){
        let now = (new Date()).getTime();
        let from = (new Date(footer.live.from)).getTime();
        let diff = now - from;
        diff = Math.round(diff / 1000)
        let second = diff % 60;
        diff = Math.round(diff / 60);
        let minute = diff % 60;
        diff = Math.round(diff / 60);
        let hour = diff % 24;
        diff = Math.round(diff / 24);
        
        let flag = false;
        let str = ''
        if(diff){
            flag = true;
            str += diff + '天'
        }
        if(hour || flag){
            flag = true;
            str += hour + '时'
        }
        if(minute || flag){
            flag = true;
            str += minute + '分'
        }
        if(second || flag){
            flag = true;
            str += second + '秒'
        }
        liveDom.innerText = str;
    }
})
</script>

<style>
#footer{
    padding: 1em;
    text-align: center;
}
</style>